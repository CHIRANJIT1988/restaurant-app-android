<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >


    <LinearLayout
        android:id="@+id/price_layout"
        android:layout_width="90dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/round_green_button_style" >

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/image_preview"
            android:paddingTop="12dp"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:src="@drawable/ic_currency_inr_white_18dp" />

        <TextView
            android:id="@+id/price"
            android:layout_toRightOf="@id/thumbnail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="16dp"
            android:ellipsize="marquee"
            android:textColor="#fff"
            android:maxEms="14"
            android:text="300"
            android:singleLine="true" />

    </LinearLayout>


    <TextView
        android:id="@+id/name"
        android:layout_toRightOf="@id/price_layout"
        android:layout_alignBaseline="@+id/price_layout"
        android:layout_centerInParent="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="16dp"
        android:ellipsize="marquee"
        android:textColor="#fff"
        android:maxEms="14"
        android:singleLine="true"
        android:background="@drawable/round_red_button_style" />

</RelativeLayout>