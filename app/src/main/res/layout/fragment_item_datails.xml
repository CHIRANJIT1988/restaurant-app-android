<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="gmc.manasa.zantrik.activity.HelpFragment">


    <RelativeLayout
        android:id="@+id/price_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#50FFFFFF" >


        <RadioGroup
            style="@style/CustomGroupBoxStyle"
            android:orientation="horizontal"
            android:layout_margin="30dp"
            android:layout_alignParentTop="true"
            android:gravity="center" >

            <RadioButton
                android:id="@+id/radio1"
                android:text="1"
                style="@style/CustomRadioButtonStyle" />

            <RadioButton
                android:id="@+id/radio2"
                android:text="2"
                style="@style/CustomRadioButtonStyle" />

            <RadioButton
                android:id="@+id/radio3"
                android:text="3"
                style="@style/CustomRadioButtonStyle" />

            <RadioButton
                android:id="@+id/radio4"
                android:text="4"
                style="@style/CustomRadioButtonStyle" />

            <RadioButton
                android:id="@+id/radio5"
                android:text="5"
                style="@style/CustomRadioButtonStyle" />

        </RadioGroup>


        <Button
            android:id="@+id/btnPlaceOrder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/myPrimaryDarkColor"
            android:text="PLACE ORDER"
            android:layout_margin="70dp"
            android:padding="10dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/ic_checkbox_marked_circle_outline_white_24dp"
            android:background="@drawable/round_transparent_button_style" />

    </RelativeLayout>

</RelativeLayout>
